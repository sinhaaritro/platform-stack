apiVersion: argoproj.io/v1alpha1
kind: ApplicationSet
metadata:
  name: cluster-bootstrap
  namespace: {{ argocd_namespace }}
spec:
  goTemplate: true
  goTemplateOptions: ["missingkey=error"]
  generators:
    - git:
        repoURL: {{ argocd_git_repo_url }}
        revision: {{ argocd_git_repo_revision }}
        # Only match directories directly under clusters/
        directories:
          - path: kubernetes/clusters/*
  template:
    metadata:
      name: '{% raw %}{{.path.path | base}}{% endraw %}'
    spec:
      project: default
      source:
        repoURL: {{ argocd_git_repo_url }}
        targetRevision: {{ argocd_git_repo_revision }}
        path: '{% raw %}{{.path.path}}{% endraw %}'
      destination:
        # Dynamically determine destination.
        # For 'ruth', use local cluster. For others, we might need a map or secrets.
        # For now, we hardcode logic or assume name matches a secret.
        # Since the prompt said: "Found folder ruth? -> Deploy contents to Cluster https://kubernetes.default.svc"
        # We can use a Go Template conditional if we want, or just rely on ArgoCD cluster secrets triggering.
        # But for this specific task, let's keep it simple.
        # If the folder name is 'ruth', use in-cluster.
        server: '{% raw %}{{if eq (.path.path | base) "ruth"}}https://kubernetes.default.svc{{else}}https://{{.path.path | base}}-api.example.com:6443{{end}}{% endraw %}'
        namespace: default
      syncPolicy:
        automated:
          prune: true
          selfHeal: true
        syncOptions:
          - CreateNamespace=true
